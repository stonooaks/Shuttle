@model IEnumerable<Hermes.Data.Models.GasMileage>

@{
    ViewBag.Title = "Gas Mileage";
}

<h2>Gas Mileage</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mileage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gallons)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mileage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gallons)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            
        </td>
    </tr>
}

</table>
<div class="btn-group">
    @using (Html.BeginForm("Create", "GasMileage", FormMethod.Get)) {
        <button class="btn btn-default" type="submit">Add Mileage</button>
    }
       
    @using (Html.BeginForm("Details", "Vehicle", FormMethod.Get, new { id = ViewBag.VehicleId })) {

        <button class="btn btn-block" type="submit">Return to Vehicle</button>
    }
    
</div>