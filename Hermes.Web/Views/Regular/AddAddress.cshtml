@model Hermes.Web.ViewModels.AddAddressViewModel
@{
    ViewBag.Title = "AddAddress";
}

@using (Html.BeginForm()){
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Address</h4>
        <hr />

        @Html.HiddenFor(model => model.MemberId)
        @Html.HiddenFor(model => model.HHID)
        @Html.HiddenFor(model => model.Date)

        <div class="form-group">
            @Html.LabelFor(model => model.Address, "Address", new{ @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Create", new{ Memberid = ViewBag.MemberId, HHID = ViewBag.HHID, Date = ViewBag.Date})
</div>

